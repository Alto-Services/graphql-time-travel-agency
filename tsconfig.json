{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        },
        "lib": ["ES2020", "ESNext"],
        "typeRoots": ["./node_modules/@types", "./src/types", "./src/middlewares/expressContext.d.ts"]
    },
    "include": ["src/**/*", "src"],
    "ts-node": {
        "swc": true
    }
}
